<div class="ui grid">
  <div class="six wide column">
    <%= form_for :team, url: teams_path do |f| %>
        <div class="ui form">

          <div class="field">
            <div class="ui input">
              <%= f.text_field :name, :placeholder => 'Nom de l\'équipe' %>
            </div>
          </div>

          <div class="field">
            <%= f.text_area :description, :placeholder => 'Description de l\'équipe' %>
          </div>

          <div class="field">
            <%= f.submit 'Créer', :class => 'ui primary button' %>
          </div>

        </div>
    <% end %>
  </div>
</div>