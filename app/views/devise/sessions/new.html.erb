<div class="ui grid">
<div class="six wide column">
<h2>Se connecter</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="ui form">
        <div class="field">
            <div class="ui input">
              <%= f.text_field :name, :placeholder => 'Pseudo' %>
            </div>
        </div>

        <div class="field">
            <div class="ui input">
              <%= f.password_field :password, autocomplete: "off", :placeholder => 'Mot de passe' %>
            </div>
        </div>

        <div class="field">
            <% if devise_mapping.rememberable? -%>
                <div class="ui toggle checkbox">
                  <%= f.check_box :remember_me %> <%= f.label :remember_me, "Se souvenir de moi" %>
                </div>
            <% end -%>
        </div>

        <div class="field">
            <%= f.submit "Se connecter", :class => 'ui primary button' %>
        </div>
    </div>

<% end %>
</div></div>